<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TodayMenu">

            <!--오늘의 메뉴 텍스트 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="165dp"
                        android:background="@drawable/round_background_top"
                        android:scaleType="centerCrop" />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/mon_A"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="20dp"
                            android:textSize="12dp"
                            android:text="오늘의메뉴A이다"/>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="165dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_background_top"
                        android:scaleType="centerCrop" />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/mon_B"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="20dp"
                            android:textSize="12dp"
                            android:text="오늘의메뉴B이다"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>


            <!-- 메뉴 A/B 장바구니 아이콘 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_background_bottom"
                        android:scaleType="centerCrop" />
                    <TableLayout
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:stretchColumns="0, 1">
                        <TableRow>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginStart="7dp"
                                android:layout_marginTop="7dp"
                                android:textSize="16dp"
                                android:text="메뉴A"/>
                        </TableRow>
                        <TableRow>
                            <ImageView
                                android:id="@+id/cart_mon_A"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="left"
                                android:layout_marginStart="140dp"
                                android:src="@drawable/ic_baseline_add_shopping_cart_24" />
                        </TableRow>
                    </TableLayout>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_background_bottom"
                        android:scaleType="centerCrop" />
                    <TableLayout
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:stretchColumns="0, 1">
                        <TableRow>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginStart="7dp"
                                android:layout_marginTop="7dp"
                                android:textSize="16dp"
                                android:text="메뉴B"/>
                        </TableRow>
                        <TableRow>
                            <ImageView
                                android:id="@+id/cart_mon_B"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="left"
                                android:layout_marginStart="140dp"
                                android:src="@drawable/ic_baseline_add_shopping_cart_24" />
                        </TableRow>
                    </TableLayout>
                </FrameLayout>
            </LinearLayout>

</LinearLayout>
